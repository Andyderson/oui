{
  "arrow":{
    "name":"Arrows",
    "group":"Components",
    "rules":{
      "direction":{
        "rule":"inArray",
        "value":[
          "up",
          "down",
          "left",
          "right"
        ],
        "default":"right",
        "required":false
      }
    }
  },
  "blockquote":{
    "name":"Blockquote",
    "group":"Elements"
  },
  "button":{
    "name":"Buttons",
    "group":"Elements",
    "rules":{
      "style":{
        "rule":"inArray",
        "value":[
          "highlight",
          "danger",
          "outline",
          "outline-reverse",
          "plain",
          "toggle"
        ],
        "default":null,
        "required":false
      },
      "disabled":{
        "rule":"isBoolean",
        "default":false
      },
      "size":{
        "rule":"inArray",
        "value":[
          "small",
          "large",
          "narrow",
          "tight",
          "full"
        ],
        "default":null,
        "required":false
      }
    }
  },
  "checkbox":{
    "name":"Checkboxes",
    "group":"Elements",
    "rules":{
      "children":{
        "rule":"isString",
        "default":null,
        "required":true
      },
      "checked":{
        "rule":"isBoolean",
        "default":false
      }
    }
  },
  "code":{
    "name":"Code",
    "description":"Monospace code snippets, both inline and multiline.",
    "group":"Elements",
    "rules":{
      "type":{
        "rule":"inArray",
        "value":[
          "inline",
          "block"
        ],
        "default":null,
        "required":true
      }
    }
  },
  "form":{
    "name":"Forms",
    "description":"Wraps inputs with an optional header and footer.",
    "group":"Elements",
    "rules":{
      "title":{
        "rule":"isString",
        "default":null,
        "required":false
      },
      "description":{
        "rule":"isString",
        "default":null,
        "required":false
      },
      "footer":{
        "rule":"hasComponent",
        "value":"button",
        "default":null,
        "required":false
      }
    }
  },
  "horizontal-rule":{
    "name":"Horizontal Rules",
    "group":"Elements",
    "rules":{
      "style":{
        "rule":"inArray",
        "value":[
          "default",
          "dotted",
          "dashed"
        ],
        "default":"default",
        "required":false
      }
    }
  },
  "images":{
    "name":"Images",
    "group":"Elements",
  },
  "label":{
    "name":"Labels",
    "group":"Elements",
    "rules":{
      "children":{
        "rule":"isString",
        "default":null,
        "required":true
      },
      "optional":{
        "rule":"isBoolean",
        "default":null,
        "required":false
      },
      "disabled":{
        "rule":"isBoolean",
        "default":false
      }
    }
  },
  "list":{
    "name":"Lists",
    "group":"Elements",
  },
  "select":{
    "name":"Selects",
    "group":"Elements",
    "rules":{
      "label":{
        "rule":"isComponent",
        "value":"label",
        "default":null,
        "required":false
      },
      "disabled":{
        "rule":"isBoolean",
        "default":false
      },
      "options":{
        "rule":"isArray",
        "required":true
      }
    }
  },
  "radio":{
    "name":"Radio",
    "group":"Elements",
    "rules":{
      "children":{
        "rule":"isString",
        "default":null,
        "required":true
      },
      "checked":{
        "rule":"isBoolean",
        "default":false
      }
    }
  },
  "table":{
    "name":"Tables",
    "group":"Elements",
  },
  "textarea":{
    "name":"Textareas",
    "group":"Elements",
    "rules":{
      "label":{
        "rule":"isComponent",
        "value":"label",
        "default":null,
        "required":false
      },
      "disabled":{
        "rule":"isBoolean",
        "default":false
      },
      "placeholder":{
        "rule":"isString",
        "required":false
      }
    }
  }
}
